<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.GameShake"
    android:background="@drawable/background_shake"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_shake"
        android:layout_width="167dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_shake2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_shake"
        android:text="Shake 10 seconds to deactive alarm"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>


</RelativeLayout>